---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Test Tailwind CSS">
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl font-bold text-center mb-8 bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
        Test Tailwind CSS
      </h1>
      
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
          <h2 class="text-xl font-semibold mb-3 text-blue-600">Card 1</h2>
          <p class="text-gray-600">Si vous voyez cette carte avec du styling, Tailwind fonctionne !</p>
          <button class="mt-4 bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded transition-colors">
            Bouton Test
          </button>
        </div>
        
        <div class="bg-gradient-to-br from-purple-500 to-pink-500 p-6 rounded-lg text-white">
          <h2 class="text-xl font-semibold mb-3">Card 2</h2>
          <p class="opacity-90">Gradient background avec Tailwind CSS v4</p>
          <div class="mt-4 flex gap-2">
            <div class="w-3 h-3 bg-white rounded-full"></div>
            <div class="w-3 h-3 bg-white/70 rounded-full"></div>
            <div class="w-3 h-3 bg-white/40 rounded-full"></div>
          </div>
        </div>
        
        <div class="bg-green-50 border border-green-200 p-6 rounded-lg">
          <h2 class="text-xl font-semibold mb-3 text-green-800">Card 3</h2>
          <p class="text-green-700">Border et couleurs de fond</p>
          <div class="mt-4 space-y-2">
            <div class="w-full bg-green-200 h-2 rounded-full">
              <div class="bg-green-500 h-2 rounded-full w-3/4"></div>
            </div>
            <p class="text-sm text-green-600">Progress bar 75%</p>
          </div>
        </div>
      </div>
      
      <div class="mt-12 text-center">
        <div class="inline-flex items-center gap-4 bg-gray-100 p-4 rounded-lg">
          <div class="w-12 h-12 bg-blue-500 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <div class="text-left">
            <h3 class="font-semibold text-gray-900">Tailwind CSS configuré</h3>
            <p class="text-gray-600">Toutes les classes utilitaires sont disponibles</p>
          </div>
        </div>
      </div>
      
      <div class="mt-8 text-center">
        <a href="/" class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium transition-colors">
          Retour à l'accueil
        </a>
      </div>
    </div>
  </main>
</Layout>

<style>
  .container {
    max-width: 1200px;
  }
</style>
